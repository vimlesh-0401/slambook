<% @user = User.new %>
<%= form_for(@user ,html: { role: "form", style: "display: none;", id: "register-form"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, tabindex: 1, class: "form-control",placeholder: "User Name" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, tabindex: 2, class: "form-control",placeholder: "Email id" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", tabindex: 3, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", tabindex: 4, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <%= f.submit "Sign up", class: "form-control btn btn-register" %>
      </div>
    </div>
  </div>
<% end %>